<a href="/">Do you have account? Sign In</a>
<form action="/account/register" method="post">
    <h1 class="text-center">Sign Up</h1>
    <div class="group">
        <label for="name">Your name</label>
        <input required type="text" id="name" name="name">
    </div>
    <div class="group">
        <label for="username">Create an username</label>
        <input required type="text" id="username" name="username">
    </div>
    <div class="group">
        <label for="email">Your email</label>
        <input required type="email" id="email" name="email">
    </div>
    <div class="group">
        <label for="phone">Your phone number</label>
        <input required type="tel" id="phone" name="phone">
    </div>
    <div class="group">
        <label for="password">Create a strong <strong>password</strong></label>
        <input required type="password" id="password" name="password">
    </div>
    <div class="group">
        <label for="password-request">Repeat your password to confirm</label>
        <input required type="password" id="password-request" name="password-request">
    </div>
    <div class="group">
        <button type="submit">Finish my registration</button>
        <button type="reset">Cancel</button>
    </div>
</form>